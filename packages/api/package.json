{
  "name": "@realms-world/api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./src/index.ts"
    }
  },
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "lint": "eslint",
    "format": "prettier --check \"**/*.{mjs,ts,md,json}\"",
    "format:write": "prettier --check --write \"**/*.{mjs,ts,md,json}\"",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false"
  },
  "dependencies": {
    "@realms-world/auth": "*",
    "@realms-world/db": "*",
    "@realms-world/utils": "*",
    "@trpc/server": "11.0.0-rc.364",
    "drizzle-pagination": "1.0.10",
    "superjson": "2.2.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@realms-world/eslint-config": "*",
    "@realms-world/prettier-config": "*",
    "@realms-world/tsconfig": "*",
    "eslint": "^9.9.0",
    "prettier": "^3.3.3",
    "typescript": "^5.5.3"
  },
  "prettier": "@realms-world/prettier-config"
}
